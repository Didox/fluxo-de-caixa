<%= form_for(@fatura, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @fatura.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os erros abaixo:</h4>

      <ul>
      <% @fatura.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :cliente_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :cliente_id, Cliente.all.map{|c| ["#{c.razao_social} - #{c.cnpj}", c.id]}, {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :emissao, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :emissao, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vencimento, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :vencimento, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :status, Fatura.todos_status.map{|id,nome| [nome, id]}.sort, {}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
