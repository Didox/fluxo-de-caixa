<%= form_for(@pedido, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @pedido.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os erros abaixo:</h4>

      <ul>
      <% @pedido.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :placa, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :placa, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :data_emissao_fatura, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :data_emissao_fatura, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descricao, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :descricao, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :numero_fatura, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :numero_fatura, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :data_inicio, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :data_inicio, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :data_fim, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :data_fim, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :vencimento, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :vencimento, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :valor, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :valor, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
