<%= form_for(@cliente, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @cliente.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4>Confira os erros abaixo:</h4>

      <ul>
      <% @cliente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :razao_social, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :razao_social, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cnpj, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cnpj, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :inscricao_estadual, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :inscricao_estadual, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :inscricao_municipal, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :inscricao_municipal, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :endereco, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :endereco, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
